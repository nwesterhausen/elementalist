{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.nwest.one/games/elementalist/stat_effect.json",
  "title": "Elementalist Stat Effect",
  "description": "A stat effect that could be applied from a buff or debuff (e.g. from a spell or item).",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the effect",
      "type": "string"
    },
    "description": {
      "description": "A description of the effect",
      "type": "string"
    },
    "duration": {
      "description": "The duration of the effect",
      "type": "number",
      "inclusiveMinimum": 0
    },
    "maxStacks": {
      "description": "The max number of stacks of the effect",
      "type": "integer",
      "inclusiveMinimum": 0
    },
    "affectedEntity": {
      "description": "The entities affected by the effect",
      "type": "string",
      "oneOf": [
        {
          "const": "Any",
          "description": "Affects any entity type (player, enemy, ally)"
        },
        {
          "const": "Player",
          "description": "Affects only the player"
        },
        {
          "const": "Enemy",
          "description": "Affects only enemies"
        },
        {
          "const": "Ally",
          "description": "Affects only allies"
        },
        {
          "const": "None",
          "description": "Affects no entities"
        }
      ]
    },
    "affectedStats": {
      "description": "The stats affected by the effect",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "stat": {
            "description": "The affected stat",
            "$ref": "https://schemas.nwest.one/games/elementalist/stat.json"
          },
          "amount": {
            "description": "The amount the stat is affected by (can be negative)",
            "type": "number"
          },
          "affectType": {
            "description": "The type of affect the debuff has on the stat",
            "type": "string",
            "oneOf": [
              {
                "const": "add",
                "description": "Add the amount to the stat"
              },
              {
                "const": "multiply",
                "description": "Multiply the stat by the amount"
              }
            ]
          }
        }
      },
      "required": [
        "stat",
        "amount",
        "affectType"
      ]
    }
  },
  "required": [
    "affectedEntity",
    "affectedStats",
    "name",
    "description",
    "duration",
    "maxStacks"
  ]
}
